<%- include("../adminPartials/header") %>


  <section class="content-main">
    <div class="content-header">
      <div>
        <h2 class="content-title card-title">Customers</h2>
        <p>Details of customers</p>
      </div>
      <div>
        <input type="text" placeholder="Search order ID" class="form-control bg-white" />
      </div>
    </div>
    <div class="card mb-4">
      <header class="card-header">
        <div class="row gx-3">
          <div class="col-lg-4 col-md-6 me-auto">
            <input type="text" placeholder="Search..." class="form-control" />
          </div>
          <div class="col-lg-2 col-6 col-md-3">
            <select class="form-select">
              <option>Status</option>
              <option>Active</option>
              <option>Disabled</option>
              <option>Show all</option>
            </select>
          </div>
          <div class="col-lg-2 col-6 col-md-3">
            <select class="form-select">
              <option>Show 20</option>
              <option>Show 30</option>
              <option>Show 40</option>
            </select>
          </div>
        </div>
      </header>
      <!-- card-header end// -->
      <div class="card-body">
        <div class="table-responsive">

          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Created Date</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if(user.length> 0) {%>
                <% for(let i=0; i < user.length; i++) { %>
                  <tr>
                    <td>
                      <%= user[i].name %>
                    </td>
                    <td>
                      <%= user[i].email %>
                    </td>
                    <td>
                      <%= user[i].mobile %>
                    </td>
                    <td>
                      <%= new Date(user[i].createdAt).toLocaleDateString('en-US', { weekday: 'short' , month: 'short' ,
                        day: 'numeric' , year: 'numeric' }) %>
                    </td>
                    <td>
                      <a id="block-unblock-btn-<%= user[i]._id %>" 
                         class="btn-icon <%= user[i].isBlocked ? 'btn-success' : 'btn-danger' %>" 
                         onclick="userStatus('<%= user[i]._id %>', '<%= user[i].isBlocked %>')">
                        <%= user[i].isBlocked ? 'Unblock' : 'Block' %>
                      </a>
                    </td>

                    </tr>
                  <% } } else { %>
                    <tr>
                      <td colspan="4">User not found</td>
                    </tr>
                    <% } %>
            </tbody>
          </table>
        </div>
        <!-- table-responsive //end -->
      </div>
      <!-- card-body end// -->
    </div>
    <!-- card end// 
                Pagination  -->
                <div class="row ">
                  <div class="col-12 ">
                      <nav aria-label="Page navigation example ">
                          <ul class="pagination justify-content-center">
                              <% if (currentPage > 1) { %>
                              <li class="page-item">
                                  <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                              </li>
                              <% } %>
                              <% for (let i = 1; i <= totalPages; i++) { %>
                              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                              </li>
                              <% } %>
                              <% if (currentPage < totalPages) { %>
                              <li class="page-item">
                                  <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                              </li>
                              <% } %>
                          </ul>
                      </nav>
                  </div>
              </div>
  </section>
  <!-- content-main end// -->
              <script>
                async function userStatus(userId, isBlocked) {
                  Swal.fire({
                    title: "Are you sure?",
                    text: `You are about to ${isBlocked ? 'unblock' : 'block'} this user.`,
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: `Yes, ${isBlocked ? 'unblock' : 'block'} user!`,
                    cancelButtonText: "No, cancel!",
                    reverseButtons: true
                  }).then(async (result) => {
                    if (result.isConfirmed) {
                      const response = await fetch('/admin/userStatus', {
                        method: "PATCH",
                        headers: {
                          'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ userId })
                      });
                      const data = await response.json();
                      if (data.success) {
                        Swal.fire({
                          icon: "success",
                          title: "Success",
                          text: data.message
                        }).then(()=>{
                          window.location.reload()
                        })

                        // Update the onclick function with the new status
                        button.setAttribute('onclick', `userStatus('${userId}', ${!isBlocked})`);
                        
                      } else {
                        Swal.fire({
                          icon: "error",
                          title: "Error",
                          text: data.message
                        });
                      }
                    }
                  });
                }
                </script>
  <%- include("../adminPartials/footer") %>