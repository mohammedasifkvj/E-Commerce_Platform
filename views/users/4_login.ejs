    <script>
        document.getElementById('loginForm').addEventListener('submit', async function (event) {
            event.preventDefault(); // Prevent the default form submission

            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const errorDiv = document.getElementById('error');
            const errorDiv1 = document.getElementById('error1');
            errorDiv.textContent = ''; // Clear previous errors

            // Simple email validation regex
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            // Password should not contain spaces
            const passwordRegex = /^\S+$/;

            // Validate email
            if (!email && !password) {
                errorDiv.textContent = 'Enter email';
                errorDiv1.textContent = 'Enter password';
                return;
            }
            else if (!email) {
                errorDiv.textContent = 'Enter email';
                return;
            }
            else if (!emailRegex.test(email)) {
                errorDiv.textContent = 'Enter a valid email';
                return;
            }

            // Validate password
            if (!password) {
                errorDiv1.textContent = 'Enter password';
                return;
            } else if (!passwordRegex.test(password)) {
                errorDiv1.textContent = 'Password should not contain spaces';
                return;
            }
            const userData = {
                email: email,
                password: password
            }
            // If validation passes, send the form data to the server
            try {
                //console.log(userData, 'this is usrData')
                const response = await fetch('/signIn', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(userData)
                });
               // console.log(response, 'this is data');
                if (response.ok) {
            // Handle successful response
            // console.log('Login successful:');
            // Redirect to another page or update the UI accordingly
            window.location.href = '/home';
        }else if(response.status == 400){
            const data = await response.json()
            window.location.href = `/signIn?message=${data.message}`;
        } 
        else if(response.status == 401){
            const data = await response.json()
            window.location.href = `/signIn?message=${data.message}`;
        } 
         else if(response.status == 403){
            const data = await response.json()
            window.location.href = `/signIn?message=${data.message}`;
        } 
        else {
            // Handle errors from the server
            const errorData = await response.json();
            errorDiv.textContent = errorData.message || 'Sign-in failed';
        }
    } catch (e) {
            console.error('Error:', e.message);
            errorDiv.textContent = 'An error occurred. Please try again later.';
        }
 });
    </script>
