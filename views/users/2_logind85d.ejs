<script src="https://apis.google.com/js/platform.js" async defer></script>
<script>
    document.getElementById('signupForm').addEventListener('submit', async function (event) {
        event.preventDefault(); // Prevent the default form submission

        const name = document.getElementById('name').value.trim()
        const email = document.getElementById('email').value.trim()
        const mobile = document.getElementById('mobile').value;
        const password = document.getElementById('password').value.trim()
        
        const errorName = document.getElementById('errorName');
        const errorEmail = document.getElementById('errorEmail');
        const errorMobile = document.getElementById('errorMobile');
        const errorPassword = document.getElementById('errorPassword');

        // Clear previous errors
        errorName.textContent = '';
        errorEmail.textContent = '';
        errorMobile.textContent = '';
        errorPassword.textContent = '';

        // Validation regex patterns
        const nameRegex = /^[A-Z][a-zA-Z\s]{5,}$/;
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        const mobileRegex = /^[6-9]\d{9}$/;
        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_])[A-Za-z\d\W_]{6,}$/;

          // Validate inputs
         let isValid = true;

        // Validate name
        if (!nameRegex.test(name)) {
            errorName.textContent = 'Starts with capital letter and be at least 6 characters long.';
            isValid = false;
        }

        // Validate email
        if (!emailRegex.test(email)) {
            errorEmail.textContent = 'Enter a valid email.';
            isValid = false;
        }

        // Validate mobile number
        if (!mobileRegex.test(mobile)) {
            errorMobile.textContent = 'Enter 10 digits start with 6 to 9.';
            isValid = false;
        }

        // Validate password
        if (!passwordRegex.test(password)) {
            errorPassword.textContent = 'Strong paassword with 8 elements,including numbers,uppercase,lowercase and symbols ';
            isValid = false;
        }

        if (!isValid) return;

        const userData = {
            name: name,
            email: email,
            mobile: mobile,
            password: password
        };

        // If validation passes, send the form data to the server
        try {
            const response = await fetch('/send-otp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(userData)
            });

            if (response.ok) {
                // Handle successful response
                console.log('Sign up successful');
                // Redirect to another page or update the UI accordingly
                window.location.href = '/otp';
            } else if(response.status == 400){
            const data = await response.json()
            window.location.href = `/signUp?message=${data.message}`;
            }else if(response.status == 401){
            const data = await response.json()
            window.location.href = `/signUp?message=${data.message}`;
            }
            else {
                // Handle errors from the server
                const errorData = await response.json();
                const errorDiv = errorEmail; // You can choose a div to display server error
                errorDiv.textContent = errorData.message || 'Sign up failed';
            }
        } catch (e) {
            console.error('Error:', e.message);
            errorEmail.textContent = 'An error occurred. Please try again later.';
        }
    });
</script>
