            <div class="account">
                <div class="account-head">
                </div>
                <div class="account-body">
                    <section class="account-content">
                            <h3 class="account-heading">Orders</h3>
     <% if (order.length === 0) { %>
             <h1 class="page-heading" data-cart-page-title> Your Nothing Orederd yet</h1>
            <% } else{ %>
<ul class="account-list">
    <% for(let i=0;i < order.length; i++){ %>
    <li class="account-listItem">
        <div class="account-product">
            <div class="account-product-figure">
                    <img src="" alt="" title="" data-sizes="auto"/>
            </div>
            <div class="account-product-body">
                <div class="account-orderStatus">
                    <h6 class="account-orderStatus-label">Awaiting payment</h6>
                </div>
                
                <h6 class="account-product-title">
                    <a href="/orderDetails/<%= order[i]._id %>">Order Details</a>
                </h6>
                <p class="account-product-description"> <%= order[i].orderItems.length %></p>

                <div class="account-product-details">
                    <div class="account-product-detail">
                        <h6 class="account-product-detail-heading">Order Placed</h6>
                        <span><%= order[i].orderDate %></span>
                    </div>
                    <div class="account-product-detail">
                        <h6 class="account-product-detail-heading">Last Update</h6>
                        <span><%= order[i].createdAt %></span>
                    </div>
                </div>
            </div>
        </div>
    </li>
    <%  } %>
</ul>
<%  } %>
<div class="pagination">
    <ul class="pagination-list pagination-list--small">

            <li class="pagination-item">Page 1 of 1</li>

    </ul>
</div>

                    </section>
                </div>
            </div>
