    <main class="page create-account account">
    <div class="container container-smaller">
        <div class="page-content">
            <div class="themevale-heading">
                <h1 class="page-heading">OTP Validation</h1>
                <% if (error) { %>
                    <div class=" text-center font-regular p-2 alert alert-danger "id="popup" style=" border-radius: 10px; font-size: 18px; width: 25% ; background-color: rgb(248, 151, 151); color: darkred;display: flex; display: flex; align-items: center; justify-content: center;"><%= error %></div>  
                  <% } %>
                  <% if (success) { %>
                    <div class=" text-center font-regular p-2 alert alert-danger "id="popup" style=" border-radius: 10px; font-size: 18px; width: 25% ; background-color: rgb(248, 151, 151); color: darkgreen;display: flex; display: flex; align-items: center; justify-content: center;" ><%= success %></div>  
                  <% } %>
            </div>
            <div class="account">
                <div class="account-body">
                    <!-- https://luxwatches-demo-02.mybigcommerce.com/login.php?action=save_new_account -->
                        <form action="/verify-OTP" data-create-account-form method="post" class="form">
                            <div class="form-row form-row--half">

                                <div class="form-field" id="FormField_4" data-validation="{&quot;type&quot;:&quot;singleline&quot;,&quot;label&quot;:&quot;First Name&quot;,&quot;required&quot;:true,&quot;maxlength&quot;:0}" data-type="FirstName">
    <label class="form-label text-center" for="FormField_4_input"> Enter OTP
        <!-- <small>required</small> -->
    </label>
    <input type="text" id="FormField_4_input" data-label="First Name" name="otp"   class="form-input " aria-required="true" data-field-type="FirstName" >
</div>                         
                            </div>
                            <!-- <div class="g-recaptcha" data-sitekey="6LcjX0sbAAAAACp92-MNpx66FT4pbIWh-FTDmkkz"></div><br/> -->
                            <div class="form-actions">
                                <input type="submit" class="button button--small button--primary" value="Validate" />
                            </div>
                        </form>
                </div>
            </div>
        <!-- breadcrumbs -->
        </div>
    </div>
</main>

